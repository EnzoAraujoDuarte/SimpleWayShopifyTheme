<div class="product-grid grid grid-cols-2 gap-6 tablet:grid-cols-3">

    {%- for product in products -%}

        <product-card data-handle="{{ product.handle }}"></product-card>

    {%- else -%}

        <div class="col-span-full text-center py-12">
            <p>No products found in this collection</p>
        </div>

    {%- endfor -%}

</div>
