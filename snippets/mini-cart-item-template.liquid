{% raw %}
    <template is="component-template" data-type="mini-cart-item">
    
        <div class="px-4">
    
            <div class="py-5 flex flex-col gap-3 border-b border-primary-100">
    
                <div class="flex gap-3">
    
                    <div class="w-[95px] shrink-0">
                        <img src="{{ image }}" alt="{{ title }}" class="w-full ">
                    </div>
    
                    <div class="flex flex-col gap-2 flex-1">
    
                        <a href="{{ url }}" class="text-sm hover:text-primary-500">{{ title }}</a>
    
                        <ul class="flex flex-col gap-2 text-sm text-primary-400">{{ options }}</ul>
    
                    </div>
    
                </div>
    
                <div class="flex justify-between items-center">
    
                    <quantity-selector value="{{ quantity }}" name="quantity"></quantity-selector>
    
                    <span class="text-sm font-medium">{{ price }}</span>
                    
                </div>
    
            </div>
    
        </div>
    
    </template> 
    {% endraw %}