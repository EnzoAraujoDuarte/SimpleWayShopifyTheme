{%- if paginate.pages > 1 -%}

	<div class="pagination flex justify-center items-center space-x-4 mt-10 mb-10">

		{%- if paginate.previous -%}
			<a href="{{ paginate.previous.url }}" class="pagination-prev px-4 py-2 border rounded hover:bg-gray-50">
				Previous
			</a>
		{%- endif -%}

		{%- for part in paginate.parts -%}
			{%- if part.is_link -%}
				<a href="{{ part.url }}" class="pagination-number px-4 py-2 border rounded hover:bg-gray-50">
					{{ part.title }}
				</a>
			{%- else -%}
				<span class="pagination-number px-4 py-2 border rounded bg-gray-50">
					{{ part.title }}
				</span>
			{%- endif -%}
		{%- endfor -%}

		{%- if paginate.next -%}
			<a href="{{ paginate.next.url }}" class="pagination-next px-4 py-2 border rounded hover:bg-gray-50"> Next </a>
		{%- endif -%}

	</div>
    
{%- endif -%}